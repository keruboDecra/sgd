{
  "manifest_version": 2,
  "name": "Cyberbullying Detector",
  "version": "1.0",
  "description": "Detects cyberbullying in highlighted text.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
