{
  "manifest_version": 3,
  "name": "Cyberbullying Detector",
  "version": "1.0",
  "description": "Detect and classify cyberbullying in highlighted text.",
  "icons": {
    "48": "logo.png"
  },
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["<all_urls>"]
  }
}
